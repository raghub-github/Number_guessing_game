<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".First_page">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/hexagon"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="90dp"


            />
        <TextView
            android:id="@+id/txv_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NUMBER GUESSING APP"
            android:layout_below="@+id/img_image"
            android:layout_marginTop="70dp"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="#E91E63"
            android:layout_marginLeft="20dp"

            />
        <TextView
            android:id="@+id/txv_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIMPLE GAMEING APP"
            android:layout_below="@+id/txv_text1"
            android:layout_marginTop="60dp"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="#090808"
            android:layout_marginLeft="110dp"

            />



    </RelativeLayout>
</LinearLayout>